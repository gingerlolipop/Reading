   journal = {Nature},
   pages = {602-607},
   pmid = {32641831},
   publisher = {Springer US},
   title = {Massive haplotypes underlie ecotypic differentiation in sunflowers},
   volume = {584},
   url = {http://dx.doi.org/10.1038/s41586-020-2467-6},
